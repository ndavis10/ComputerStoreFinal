<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - The Computer Store</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#" class="navbar-brand">The Computer Store</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Shop", "Shop", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="well" id="sidebar">
            <ul>
                <br />
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Shop", "Shop", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
            <ul>
                <li><strong>Shopping Cart:</strong></li>
                <li><div class="well-sm" style="text-align:center;">EMPTY</div></li>
            </ul>
    </div>
    <div class="container body-content">
        @RenderBody()

        <hr />
        <footer class="footer">
            <span class="pull-left" style="font-size:12px;">&copy; @DateTime.Now.Year - Computer Store</span><span class="glyphicon glyphicon-shopping-cart pull-right" style="font-size:25pt; margin-bottom:15px;"></span>
        </footer>
    </div>
        
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
